<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/recipe_view_image_height"
                android:src="@drawable/no_image"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_view_image_height">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_remove_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_close"
                        android:backgroundTint="@color/warn"
                        app:tint="@color/white"
                        android:contentDescription="Bild entfernen"
                        app:fabSize="mini"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_upload_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_upload"
                        android:contentDescription="Bild hochladen"
                        app:fabSize="mini"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/anchor_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_view_image_height"
                android:minHeight="@dimen/recipe_view_image_height">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/anchor_recipe_image"
                android:orientation="vertical"
                tools:context=".RecipeViewFragment">
                <androidx.cardview.widget.CardView
                    android:id="@+id/container_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/background_card">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:stretchColumns="0">

                            <TableRow>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:id="@+id/txt_servings_title"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Portionen:"
                                        android:textSize="20sp"/>

                                    <EditText
                                        android:id="@+id/input_servings"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_weight="1"
                                        android:ems="10"
                                        android:inputType="number"
                                        android:text="1"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_column="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <Button
                                        android:id="@+id/btn_increase_servings"
                                        android:layout_width="46dp"
                                        android:layout_height="46dp"
                                        android:background="@drawable/round_button"
                                        android:drawableTop="@drawable/ic_plus"
                                        android:drawableTint="#fff"
                                        android:layout_marginEnd="8dp"
                                        android:layout_column="1"/>

                                    <Button
                                        android:id="@+id/btn_decrease_servings"
                                        android:layout_width="46dp"
                                        android:layout_height="46dp"
                                        android:drawableTop="@drawable/ic_minus"
                                        android:drawableTint="#fff"
                                        android:background="@drawable/round_button"
                                        android:layout_column="2"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:text="Zutaten"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/txt_preparationsteps_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_marginHorizontal="4dp"
                    android:text="Zubereitung"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <Toolbar
        android:id="@+id/toolbar_recipe_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brown_700"
        android:navigationIcon="@drawable/ic_arrow_left"
        android:title="Rezept"
        android:titleTextColor="@color/white" />
    <LinearLayout
        android:id="@+id/container_hover_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/toggle_list_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#00000000"
                android:drawableEnd="@drawable/ic_chevron_down"
                android:textColor="@color/white"
                android:text="Zutaten"
                android:tooltipText="Zutatenliste ein-/ausblenden" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/container_sub_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:contentPadding="8dp"
            android:layout_marginHorizontal="8dp"
            app:cardElevation="6dp"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:stretchColumns="0">

                    <TableRow>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/TextAppearance.AppCompat.Headline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Portionen:"
                                android:textSize="20sp"/>

                            <EditText
                                android:id="@+id/input_hover_servings"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="number"
                                android:text="1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_column="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btn_hover_increase_servings"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:background="@drawable/round_button"
                                android:drawableTop="@drawable/ic_plus"
                                android:drawableTint="#fff"
                                android:layout_marginEnd="8dp"
                                android:layout_column="1"/>

                            <Button
                                android:id="@+id/btn_hover_decrease_servings"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:drawableTop="@drawable/ic_minus"
                                android:drawableTint="#fff"
                                android:background="@drawable/round_button"
                                android:layout_column="2"/>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:text="Zutaten"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/recipe_view_image_height">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_hover_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"/>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>